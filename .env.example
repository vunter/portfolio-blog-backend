# Portfolio Blog Backend - Environment Variables Template
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Security Configuration
# ===========================================

# JWT Secret Key (minimum 32 characters for HS256, 64+ recommended)
# Generate with: openssl rand -base64 64
JWT_SECRET=

# ===========================================
# REQUIRED - Database Configuration
# ===========================================

# PostgreSQL credentials
DB_USERNAME=
DB_PASSWORD=

# ===========================================
# OPTIONAL - Admin User (for initial setup)
# ===========================================

# If set, creates an admin user on first run
# Password must be at least 12 characters
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_NAME=

# ===========================================
# OPTIONAL - CORS Configuration
# ===========================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# OPTIONAL - Email Configuration
# ===========================================

MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=

# ===========================================
# OPTIONAL - Application Configuration
# ===========================================

APP_URL=https://yourdomain.com

# Newsletter confirmation link expiration (hours)
NEWSLETTER_CONFIRMATION_EXPIRATION_HOURS=48
