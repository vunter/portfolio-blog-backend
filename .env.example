# Portfolio Blog v2 - Environment Variables Template
# Copy this file to .env and fill in the values

# ===========================================
# REQUIRED - Security Configuration
# ===========================================

# JWT Secret Key (minimum 32 characters for HS256, 64+ recommended)
# Generate with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-must-be-at-least-256-bits-long-generate-with-openssl

# ===========================================
# REQUIRED - Database Configuration
# ===========================================

# PostgreSQL credentials
DB_USERNAME=postgres
DB_PASSWORD=change-this-password-in-production

# ===========================================
# OPTIONAL - Admin User (for initial setup)
# ===========================================

# If set, creates an admin user on first run
# Password must be at least 12 characters
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=secure-admin-password-at-least-12-chars
ADMIN_NAME=Administrator

# ===========================================
# OPTIONAL - CORS Configuration
# ===========================================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# ===========================================
# OPTIONAL - Email Configuration
# ===========================================

MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yourdomain.com

# ===========================================
# OPTIONAL - Application Configuration
# ===========================================

APP_URL=https://yourdomain.com

# Newsletter confirmation link expiration (hours)
NEWSLETTER_CONFIRMATION_EXPIRATION_HOURS=48
