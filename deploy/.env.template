# =============================================================================
# Environment variables for Docker Compose deployment
# Copy this file to .env and fill in the values
# =============================================================================

# --- Required ---
JWT_SECRET=<generate with: openssl rand -base64 64>
GRAFANA_PASSWORD=<generate with: openssl rand -base64 32>

# --- Database ---
DB_USERNAME=postgres
DB_PASSWORD=postgres

# --- Redis ---
REDIS_PASSWORD=redis

# --- HashiCorp Vault (from vault-setup.sh output) ---
VAULT_ADDR=http://192.168.1.193:30820
VAULT_ROLE_ID=<from vault setup output: vault read auth/approle/role/portfolio-blog/role-id>
VAULT_SECRET_ID=<from vault setup output: vault write -f auth/approle/role/portfolio-blog/secret-id>

# --- Admin User ---
ADMIN_EMAIL=admin@catananti.dev
ADMIN_PASSWORD=<strong password>
ADMIN_NAME=Administrator

# --- CORS ---
CORS_ALLOWED_ORIGINS=https://catananti.dev,https://www.catananti.dev

# --- reCAPTCHA ---
RECAPTCHA_ENABLED=true
RECAPTCHA_SITE_KEY=<your site key>
RECAPTCHA_SECRET_KEY=<your secret key>
RECAPTCHA_SCORE_THRESHOLD=0.5

# --- Datadog ---
DD_API_KEY=<from vault: secret/portfolio-blog datadog.api-key>
DD_SITE=us5.datadoghq.com
DD_AGENT_ENABLED=true
DD_METRICS_ENABLED=true

# --- Nexus ---
NEXUS_URL=http://192.168.1.214:30081
NEXUS_USERNAME=<from vault: secret/portfolio-blog nexus.username>
NEXUS_PASSWORD=<from vault: secret/portfolio-blog nexus.password>
NPM_REGISTRY=http://192.168.1.214:30081/repository/npm-proxy/
